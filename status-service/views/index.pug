extends layout

block layout-content
  div(class="well")
    div(class="container")
      div(class="row")
        div(class="col-sm-3")
          div(class="card text-white bg-secondary mb-3",style="max-width: 30rem;")
            div(class="card-header")
              p Status
            div(class="card-body")
              div(class="card-title")
                 p Region U.S. South
              div(class="card-text")
                 - if (nodes && nodes.length)
                   - for(i=0; i<nodes.length; i++)
                       span(class="badge badge-" + nodes[i].status)
                          a(href=baseurl + 'node?node=' + nodes[i].node)= nodes[i].node
